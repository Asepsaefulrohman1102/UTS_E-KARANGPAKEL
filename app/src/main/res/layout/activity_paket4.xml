<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".paket4">

    // menampilkan gambar, judul, dan deskripsi Sepatu dengan scrollview
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/image"
                android:src="@drawable/sepatu" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="Sepatu"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="Sepatu ini adalah sepatu hasil dari umkm yang berada di karang pakel. Sepatu ini memiliki motif yang unik dan menarik. Sepatu ini juga memiliki warna yang cerah dan menarik. Sepatu ini juga memiliki harga yang terjangkau. Sepatu ini juga memiliki motif yang unik dan menarik. Sepatu ini juga memiliki warna yang cerah dan menarik. Sepatu ini juga memiliki harga yang terjangkau."
                android:textSize="18sp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>