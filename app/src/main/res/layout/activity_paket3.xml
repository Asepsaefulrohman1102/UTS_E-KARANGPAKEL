<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".paket3">

    //menampilkan gambar, judul, dan deskripsi Baju dengan scrollview
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="350dp"
                android:layout_height="350dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:contentDescription="@string/image"
                android:src="@drawable/baju" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="Baju Khas Klaten"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="Baju ini merupakan hasil dari umkm yang berada di Karang Pakel. Baju ini memiliki motif yang unik dan menarik. Baju ini juga memiliki warna yang cerah dan menarik. Baju ini juga memiliki harga yang terjangkau. Baju ini juga memiliki motif yang unik dan menarik. Baju ini juga memiliki warna yang cerah dan menarik. Baju ini juga memiliki harga yang terjangkau."
                android:textSize="18sp" />

        </LinearLayout>
    </ScrollView>



</LinearLayout>